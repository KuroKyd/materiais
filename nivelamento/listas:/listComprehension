'''

#1

listaInt = eval(input())
soma = 0 
pos = 0 
neg = 0 

neg = [x for x in listaInt if x < 0] 
pos = [x for x in listaInt if x > 0]

neg = sum(neg)
pos = sum(pos)
soma = sum(listaInt)

print("{} {} {}".format(soma, pos, neg))

